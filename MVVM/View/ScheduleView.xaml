<UserControl x:Class="SchoolManager.MVVM.View.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/ScrollBarTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Дата -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Дата:"
                       FontSize="18"
                       VerticalAlignment="Center"
                       Margin="10,0,10,0"
                       Style="{StaticResource TextBlockTheme}"
                       FontFamily="/Fonts/#Stolzl Book"/>
            <DatePicker Width="150"
                        SelectedDate="{Binding SelectedDate, UpdateSourceTrigger=PropertyChanged}" 
                        Style="{StaticResource DatePickerTheme}"/>
        </StackPanel>
        <!-- Заголовок -->
        <TextBlock Grid.Row="1" Text="Расписание занятий" 
                   Style="{StaticResource TextBlockTheme}" 
                   FontSize="28" 
                   HorizontalAlignment="Center" 
                   Margin="5"
                   FontFamily="/Fonts/#Stolzl Book"/>
        <!-- Подзаголовок -->
        <TextBlock Grid.Row="2" Text="{Binding DateHeader}" 
                   Style="{StaticResource TextBlockTheme}" 
                   FontSize="16" 
                   HorizontalAlignment="Center" 
                   Margin="0,5,0,5"
                   FontFamily="/Fonts/#Stolzl Light"/>
        <!-- Основной контейнер таблицы -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Фиксированная часть (заголовки) -->
            <ScrollViewer x:Name="HeaderScroll" 
                          Grid.Row="0"
                          HorizontalScrollBarVisibility="Hidden" 
                          VerticalScrollBarVisibility="Disabled"
                          Padding="0,0,17,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="#808080" BorderThickness="1,1,1,1" Padding="5">
                        <TextBlock Text="№" Style="{StaticResource TextBlockTheme}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="1" BorderBrush="#808080" BorderThickness="1,1,1,1" Padding="5">
                        <TextBlock Text="Время" Style="{StaticResource TextBlockTheme}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ItemsControl Grid.Column="2" ItemsSource="{Binding Classes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#808080" BorderThickness="1,1,1,1" Padding="5" Width="180">
                                    <TextBlock Text="{Binding}" Style="{StaticResource TextBlockTheme}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
            <!-- Скрол -->
            <ScrollViewer x:Name="DataScroll"
                          Grid.Row="1"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          PreviewMouseWheel="DataScroll_PreviewMouseWheel"
                          ScrollChanged="DataScroll_ScrollChanged">
                <ItemsControl ItemsSource="{Binding ScheduleData}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" BorderBrush="#808080" BorderThickness="1,1,1,1" Padding="5">
                                    <TextBlock Text="{Binding LessonNumber}" Style="{StaticResource TextBlockTheme}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="1" BorderBrush="#808080" BorderThickness="1,1,1,1" Padding="5">
                                    <TextBlock Text="{Binding Time}" Style="{StaticResource TextBlockTheme}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ItemsControl Grid.Column="2" ItemsSource="{Binding ClassLessons}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#5065A6" BorderBrush="#808080" BorderThickness="1,1,1,1" 
                                                    Padding="5" Width="180" MinHeight="40">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Value.Subject}" 
                                                                   Style="{StaticResource TextBlockTheme}"
                                                                   HorizontalAlignment="Left" 
                                                                   TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding Value.Teacher}" 
                                                                   Style="{StaticResource TextBlockTheme}" 
                                                                   FontSize="12" Opacity="0.8"
                                                                   HorizontalAlignment="Left" 
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Value.Classroom}" 
                                                               Style="{StaticResource TextBlockTheme}" 
                                                               VerticalAlignment="Center" 
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>