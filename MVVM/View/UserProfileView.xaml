<UserControl x:Class="SchoolManager.MVVM.View.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolManager.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Border Background="#2F2F4F"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#50508A">
        <StackPanel Margin="10">
            <!-- Иконка -->
            <Image Source="/Images/User.png"
                   Width="45" Height="45"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>
            <!-- Фамилия -->
            <TextBlock Text="{Binding LastName}"
                       Foreground="White"
                       FontSize="14"
                       FontFamily="/Fonts/#Stolzl Light"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
            <!-- Имя -->
            <TextBlock Text="{Binding FirstName}"
                       Foreground="White"
                       FontSize="14"
                       FontFamily="/Fonts/#Stolzl Light"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
            <!-- Отчество -->
            <TextBlock Text="{Binding MiddleName}"
                       Foreground="White"
                       FontSize="14"
                       FontFamily="/Fonts/#Stolzl Light"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>
            <!-- Роль -->
            <TextBlock Text="{Binding UserRole}"
                       Foreground="Gray"
                       FontSize="12"
                       FontFamily="/Fonts/#Stolzl Light"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,5"/>
            <!-- Выйти -->
            <Button Content="Выйти"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource LoginButtonTheme}"
                    HorizontalAlignment="Center" 
                    Width="125" 
                    Height="30"/>
        </StackPanel>
    </Border>
</UserControl>