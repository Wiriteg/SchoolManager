<Application x:Class="SchoolManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolManager"
             xmlns:viewModel="clr-namespace:SchoolManager.MVVM.ViewModel"
             xmlns:view="clr-namespace:SchoolManager.MVVM.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:SchoolManager.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/TextBlockTheme.xaml"/>
                <ResourceDictionary Source="/Theme/ScrollBarTheme.xaml"/>
                <ResourceDictionary Source="/Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/LoginButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/IconButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/HomeButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/ExpanderTheme.xaml"/>
                <ResourceDictionary Source="/Theme/DatePickerTheme.xaml"/>
                <ResourceDictionary Source="/Theme/ComboBoxTheme.xaml"/>
                <ResourceDictionary Source="/Theme/PopupTextboxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:RoleToVisibilityConverter x:Key="RoleToVisibilityConverter"/>
            <converters:ClassNameToVisibilityConverter x:Key="ClassNameToVisibilityConverter"/>
            <converters:ClassNameToScheduleConverter x:Key="ClassNameToScheduleConverter"/>
            <converters:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
            
            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ScheduleViewModel}">
                <view:ScheduleView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:EditScheduleViewModel}">
                <view:EditScheduleView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ClassManagementViewModel}">
                <view:ClassManagementView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:TeacherManagementViewModel}">
                <view:TeacherManagementView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>